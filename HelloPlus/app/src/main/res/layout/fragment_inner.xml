<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    android:orientation="horizontal"

    <EditText
        android:id="@+id/text_field"
        android:layout_width="264dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:hint="Name"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="40dp"
        tools:layout_conversion_absoluteWidth="59dp"
        tools:layout_conversion_absoluteHeight="53dp"
        app:layout_constraintLeft_toRightOf="@+id/text_field"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_field" />

    <TextView
        android:id="@+id/hello_text"
        android:layout_width="295dp"
        android:layout_height="206dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:padding="15dp"
        android:text="default text"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/text_field"
        app:layout_constraintTop_toBottomOf="@+id/text_field"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="326dp"
        tools:layout_conversion_absoluteX="91dp"
        tools:layout_conversion_absoluteY="50dp"
        app:layout_constraintHorizontal_bias="0.419" />


</android.support.constraint.ConstraintLayout>